<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <title>Data e Hora</title>
</head>
<body>
    <div id="interface">
        <span id="dia"></span> <span id="data"></span> <span id="tempo"></span>
    </div>
    
    <script>
     function clock(){
        const agora = new Date()
        const data = agora.toLocaleDateString();
        const dias-da-semana = ['Domingo', 'Segunda-feira', 'Terça-feira', 'Quarta-feira', 'Quinta-feira', 'Sexta-feita', 'Sábado']
        const day = dias-da-semana[agora.getDay()]
        const hora = String(agora.getHours()).padStart(2, "0")
        const minutos = String(agora.getMinutes()).padStart(2, "0")
        const segundos = String(agora.getSeconds()).padStart(2, "0")
        const time = `${hora}:${minutos}:${segundos}`
        document.getElementById("dia").textContent = day document.getElementById("data").textContent = data document.getElementById("tempo").textContent = time
        setTimeout(clock, 1000)
}
        clock()
    </script>
</body>
</html>
